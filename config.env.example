# Click Tracker Configuration

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Base URL for your domain (change this to your actual domain)
BASE_URL=https://yourdomain.com

# Security
SECRET_KEY=your-secret-key-here

# Geolocation Services (Optional)
# Get free token from https://ipinfo.io
IPINFO_TOKEN=

# GeoIP2 Database (Optional - more accurate than IPInfo)
# Download from https://dev.maxmind.com/geoip/geolite2-free-geoip-database
GEOIP_DB_PATH=

# Production Settings
# Set to true in production
PRODUCTION=false
